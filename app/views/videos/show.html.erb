<div class="row">
	<div class="col-md-8">
		<br>
		<video width="740" controls>
			<source src="<%= @video.video %>" type="video/mp4" />
		</video>

		<h4>
		  <%= @video.title %>
		</h4>

		<p class="timegrey"><%= @video.views %> views</p> 

		<hr>

		<div class="container" style="padding: 0px">
			<div class="col-md-8">
				<div class="row">
					<div class="col-xs-1" style="padding: 0px 5px">
						<%= image_tag(@video.user.foto, class:'img-circle img-responsive', style: 'width: 45px; height: 45px;') %>
					</div>
					<div class="col-xs-7" style="padding: 0px">
						<p class="boldcreator"><%= @video.user.username %></p>
						<p class="timegrey"> <%= time_ago_in_words(@video.created_at) %> ago</p>
					</div>
					<div class="col-xs-2" style="padding: 0px">
						<% if user_signed_in? %>
							<% if @video.user_id == current_user.id %>
								<%= link_to 'Edit', edit_video_path(@video), class: 'btn btn-primary' %>
								<%= link_to 'Destroy', video_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
							<% end %>
						<% end %>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-offset-1 col-xs-9" style="padding: 0px">
						<p style="margin-top: 10px;"><%= @video.description %></p>				
					</div>
				</div>
			</div>
		</div>

		
		

			

		

		<p><%= @video.comments.count + @video.replies.count %> Comments</p>
		
		<%= render 'comments/form' %> <br>

		<%= render @video.comments %>

	</div>
	<div class="col-md-4">
	</div>	
</div>







