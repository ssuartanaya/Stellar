<div class="row">
  <div class="col-md-2">
    <div class="list-group">
      <a class="list-group-item active text-center">TOP UPLOADER</a>
      <% @top_users.each_with_index do |top_user, index| %>
        <%= link_to "#{index+1}. #{top_user.user.username}", user_path(top_user.user), class: 'list-group-item'  %>
      <% end %>
    </div>
  </div>
  <div class="col-md-10">
    <div class="page-header" style="margin-top: -1%;">
      <h4>Recently  <font color="#3b5998">Upload</font></h4>
    </div>
    <div class="row">
      <% video_3 = @videos.order(id: :desc).limit(3) %>
      <% vidio = video_3.each do |vidio| %>
      <div class="col-md-4">
        <%= link_to (image_tag vidio.thumbnail.url, size: "350x240", class: 'img-responsive imgs'), vidio %>
        <h4><%= vidio.title %></h4>
        <h5><%= vidio.description %></h5>
        <h6>Posted by <%= link_to vidio.user.try(:username), user_path(vidio.user) %>
        <%= time_ago_in_words(vidio.created_at) %> ago</h6>
      </div>
      <% end %>
    </div>   
  </div>
</div>

<br>
<h4 style="font-weight: bold;">Trending</h4>
<br>

  <tbody>
    <% @videos.each do |video| %>
      <div class="col-sm-6 col-md-4">
        <%= link_to (image_tag video.thumbnail.url, size: "350x240"), video %>
        <h5 style="font-weight: bold"><%= video.title %></h5>
        <h6>Posted by <%= link_to video.user.try(:username), user_path(video.user) %> <br>
        <%= time_ago_in_words(video.created_at) %> ago</h6>    
      </div>
      
    <% end %>
  </tbody>

