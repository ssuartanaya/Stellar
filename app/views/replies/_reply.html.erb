<div class="container" style="padding: 0px">
	<div class="col-md-8">
		<div class="row">
			<div class="col-xs-1" style="padding: 0px 0px 0px 22px">
				<%= image_tag(reply.user.foto, class:'img-circle img-responsive', style: 'width: 30px; height: 30px;') %>
			</div>
			<div class="col-xs-11" style="padding: 0px">
				<h6><span class="komen"><%= reply.user.username %></span>
					<span class="timegrey"><%= time_ago_in_words(reply.created_at) %></span> &nbsp;
					<span><% if user_signed_in? %>
							<% if reply.user_id == current_user.id %>
								<%= link_to "Edit", edit_reply_path(reply) %>
								<%= link_to "Delete", reply_path(reply.id), 
																							method: :delete, 
																							data: {confirm: "Are you sure?"} %>
							<% end %>
						<% end %></span></h6>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-offset-1 col-xs-9" style="padding: 0px">
				<p style="margin-top: -10px;"><%= reply.content %></p>
			</div>
		</div>
	</div>
</div>